<h1>Add Your Profile</h1>

<form action="/add-profile" method="POST" enctype="multipart/form-data">


    <label for="birthday">Birthday:</label>
    <input type="date" name="birthday">

    <label for="gender">Gender:</label>
    <select name="gender" id="select-gender">
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="other">Other</option>
        <option value="default" selected>Choose..</option>
    </select>

    <label for="city">City:</label>
    <input type="text" name="city" placeholder="City">

    <label for="phoneNumber">Phone number:</label>
    <input type="tel" name="phoneNumber" placeholder="Phone number">

    <label>Upload your profile photo: </label>
    <input type="file" name="profile-image" class="form-control-file" />



    <button type="submit" class="btn-submit">Create profile</button>
    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}
</form>

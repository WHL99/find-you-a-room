        <img src="{{imageUrl.[0]}}" class="thumbnail">
      </div>
      <div class="room-facts">
        <a href="/all-rooms/{{_id}}" class="room-title">{{title}}</a>
        <h2 class="room-rent">{{rent}} â‚¬ /night</h2>
        <p class="room-sqm">{{sqr}} sqm</p>

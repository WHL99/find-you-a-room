<h1>Here you could add your room</h1>

<form action="/add-room" method="POST" enctype="multipart/form-data">
    <label for="title">Title: </label>
    <input type="text" name="title">

    <label for="rent">Rent: </label>
    <input type="text" name="rent" pattern="[0-9]{1-10}" title="Ten digit rent" />

    <Label for="postalCode">Postal code:</Label>
    <input type="text" name="postalCode" pattern="[0-9]{5}" title="Five digit postal code" />

    <label for="address">Address: </label>
    <input type="text" name="address">

    <label for="description">Description: </label>
    <input type="text" name="description">

    <label>Upload your room's photos: </label>
    <input type="file" name="room-image" class="form-control-file" />

    <button type="submit" class="btn-submit">Add this room</button>
    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}
</form>

